{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5 col-md-4">
        <h1 class="mb-4">Inscription</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(registrationForm.surname, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.surname) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.middlename, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.middlename, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.middlename) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

       <div class="row mt-2">
            <div class="col-md-3">
                <button class="btn  btn-primary " type="submit">S'inscrire</button>
            </div>
                
            <div class="col-md-4">
                <a href="{{ path('home_index')}}" class="btn btn-danger " type="submit">Annuler</a>
            </div>
            
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
