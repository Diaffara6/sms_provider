{% extends 'security/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}


<div class="login-container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="login-header">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    </div>

    <form method="post" class="login-form">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>

        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="row">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
            <a href="{{ path('home_index')}}" class="btn btn-lg btn-danger btn-block" type="submit">Annuler</a>
        </div>
    </form>
</div>
{% endblock %}
